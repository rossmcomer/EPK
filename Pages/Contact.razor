@page "/contact"
@inherits ContactForm

<PageTitle>CONTACT | TOER</PageTitle>

<div class="pageContainer">
    <div class="headerContainer">
        <h1 class="pageHeader">CONTACT</h1>
    </div>
    <div class="pageContent">
        <div class="stylisticLine"></div>
        <div class="contactText">
            Booking:  bookings@toermusic.com
        </div>
        <div class="contactText">
            General Inquiries:  info@toermusic.com
        </div>
    </div>
</div>

@code {

    @* // Method to set recipient email
    private void SelectRecipient(string email)
    {
        ContactFormModel.RecipientEmail = email;
    }

    // Styling helper for button classes
    private string GetButtonClass(string email) =>
        ContactFormModel.RecipientEmail == email ? "selected btn btn-info" : "btn btn-outline-info";

    // Method to handle form submission
    private async Task HandleSubmit()
    {
        if (string.IsNullOrEmpty(ContactFormModel.RecipientEmail))
        {
            // Handle case where no recipient is selected (e.g., show a validation message)
            Console.WriteLine("Please select a recipient.");
            return;
        }

        // Here you would send the email or log the form data.
        // Replace this with your actual email service or backend API call.
        Console.WriteLine($"Email sent to: {ContactFormModel.RecipientEmail}");
        Console.WriteLine($"Title: {ContactFormModel.Title}");
        Console.WriteLine($"Message: {ContactFormModel.Message}");
    } *@
}